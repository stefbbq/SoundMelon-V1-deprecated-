- if @feedback.errors.any?
  #error_explanation
    %h2
      = pluralize(@feedback.errors.count, "error")
      prohibited your feedback from sending:
    %ul
      - @feedback.errors.full_messages.each do |msg|
        %li
          = msg
- else
  #error_explanation
%br
Send Feedback
.form_div{:style =>'border:1px solid;padding:5px;width:50%;'}
  = form_for @feedback, :url => send_feedback_path, :html => {:remote => true, :class => 'ajaxopen', :id =>'feedback_form'}  do |f|
    %br
    .content
      .field
      %label{:for =>"topic"}
        Feedback About
        %br
        = f.select :feedback_topic_id, options_from_collection_for_select(FeedbackTopic.all, 'id', 'name')
      .field
        %label{:for =>"content"}
          Comment
        %br
        = f.text_area :content, {:maxlength => 200, :cols => 50, :rows => 8}
    .postbtn
      = submit_tag('Send',:class=>"button blue")
    .clear