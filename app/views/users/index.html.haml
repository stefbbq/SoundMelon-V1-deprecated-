- content_for :tophead do
  .profilehead
    %h2.logotext
      %a{:href => "#"} SoundMelon
    .mplayerbar
      .logo
        %p S
      .playerbox
      .headrightbox
        = link_to "Logout" ,logout_path, :class=>"logout"
        .icons
          %span.name
            = current_user.fname
            = current_user.lname
          .numbericon
            %a{:href => "#"} 3
          .numbericon
            %a{:href => "#"} 8
          .othericon1
            %a{:href => "#"} 19
          .othericon1
            %a{:href => "#"} &euro;
          .othericon
            %a{:href => "#"} +
          .clear
      .clear
    .headmenubar
      .menu
        %ul
          %li
            %a{:href => "#"} Social
          %li
            %a{:href => "#"} Store
          %li
            %a{:href => "#"} Social
        .clear
      .searchbox
        %input.searchinput{:name => "search", :type => "text", :value => "Search"}/
        %input.search{:name => "search", :type => "submit", :value => "Go"}/
      .clear
.userdashboard
  .profilepic
  .rightbox
  .midbox
    .box1
    .box2
.clear
.midcontent
  .left
    = render "user_posts/form"
    .user_posts
      -@user_post_dates.each do |date,user_post|
        .dateicon 
          = date.to_date.strftime("%b %d")
        = render user_post      
    .clear 
    -if @load_more_path
      .readmore
        =link_to("Read more", @load_more_path ,:remote => true)
         
  .rightbar
  .clear
