.area.form
  .details
    %h3
      your name is
      %span= @band.name
    %h3
      and your username is
      %span= @band.mention_name
    %h5 click the lock to enable changes
  .content
    .field
      %label{:for=>"name"}
        name
      = f.text_field :name
    .field  
      %label{:for=>"username"}
        username
      = f.text_field :mention_name
    = f.submit 'changes are swell', :class => 'button'
.area.form
  .details
    %h3
      change your 
      %span location, genres, bio
      and 
      %span artist visibility
    %h5 click the lock to enable changes
  .content
    .field
      %label{:for=>"location"}
        location
      = f.text_field :location, :class => 'textfield'
    .field  
      %label{:for=>"genres"}
        genre(s)
      = f.text_field :genre_tokens, :class => 'textfield'
    .field
      %label{:for=>"bio"}
        bio
      = f.text_area :bio, :rows => 5, :cols => 50, :class => 'text-area-field'
    .field
      %label{:for=>"membersVisiblity"}
        show members
      = f.check_box :is_member_public, :class => 'textfield'
    = f.submit 'update', :class => 'button'
.area.form
  .details
    %h3
      set or change your
      %span external links
  .content
    .field
      %label{:for=>"website"}
        website
      = f.text_field :website, :class => 'textfield'
    .field
      %label{:for=>"facebook"}
        facebook
      = f.text_field :facebook_page, :class => 'textfield'
      %label{:for=>"twitter"}
        twitter
      = f.text_field :twitter_page, :class => 'textfield'
    = f.submit 'save to memory', :class => 'button'