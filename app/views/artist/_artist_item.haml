- actor = current_actor
- is_current_artist = actor.instance_of?(Band) && (actor.id == artist.id)
.item
  .photo
    = get_band_logo_medium(artist)
  .content
    %span.band-name= artist.name
    - unless artist.genre.blank?
      %span.band-genre
        (#{artist.genre})
    %span.other-info
      Fan ##{artist.followers_count},
      Album ##{artist.song_albums_count},
      Songs ##{artist.songs_count}
  .actions
    - if is_current_artist
      currently administrating
    - else
      = link_to "access", change_login_path(artist.name), :class =>'ajaxopen backable', :remote =>true