- is_member = @is_member
- is_admin  = @is_admin
.live
  .profile-image{:title =>"#{@colony.name}"}
    = get_profile_image(@colony, @is_admin)
  .links 
    .bottom
      .name
        %h1.full-name= @colony.name
        %hr/
        = @colony.bio
      .description 
      .overlay.overlay-info
        .actions
          - unless is_member
            = link_to join_colony_path(@colony), {:id =>'join-colony', :remote => true, :class => 'ajaxopen text-action'} do
              .icon-bg
              %i
              join
          - else
            = link_to join_colony_path(@colony), {:id =>'unjoin-colony', :remote => true, :class => 'ajaxopen text-action'} do
              .icon-bg
              %i
              unjoin
          = link_to colony_members_path(@colony), {:id =>'colony-members', :remote => true, :class => 'ajaxopen backable'} do
            %i
            members
          - if is_admin
            = link_to edit_colony_path(@colony), {:id =>'colony-members', :remote => true, :class => 'ajaxopen backable'} do
              %i
              edit
        .heading