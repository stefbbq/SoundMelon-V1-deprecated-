- selected ||=false
- link_class  = selected ? 'selection-box iconactive ajaxload button-fill-fan backable' : 'selection-box iconactive ajaxload backable'
- if follower_count > 0
  = link_to fan_followers_path(:id =>user.id), {:id=>'followers', :class=>link_class, :remote => true} do
    %span.count
      = follower_count
    - if follower_count > 1 || follower_count == 0 #doesn't use pluarize since that would seperate text styling from number and label
      followers
    - else
      follower
    - unless follower_count < Constant::FOLLOWER_SHOW_LIMIT
      %br/
      = link_to 'see all', fan_followers_path(:id =>user.id), :remote=>:true, :class=>'small-font ajaxopen backable'
- else
  .selection-box-nohref{:id =>'followers'}
    %span.count
      0
    followers
.collection{:id =>'fanfollowers'}
  - if follower_count > 0
    %div
      - follower_users.each do |fan_follower|
        = render '/bricks/avatar', :item =>fan_follower, :id_prefix =>"fan_follower"
  - else
    .message
      = Constant::NO_FOLLOWER_MESSAGE