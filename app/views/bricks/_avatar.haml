- link_class        = @actor ? 'ajaxopen backable' : 'force-login'
.avatar{:id =>"#{item.class.name.downcase}_avatar_#{item.id}"}
  - if item.is_fan?
    = link_to get_fan_avatar(item), fan_profile_path(item), :class =>link_class, :title =>item.get_full_name
  - elsif item.is_artist?
    = link_to get_artist_avatar(item), show_artist_path(item), :class =>link_class, :title =>item.name
  - elsif item.is_venue?
    = link_to get_venue_avatar(item), show_venue_path(item), :class =>link_class, :title =>item.name