.avatar{:id =>"#{item.class.name.downcase}_avatar_#{item.id}"}
  - if item.is_fan?
    = link_to get_avatar_small(item), fan_profile_path(item), :class =>'ajaxopen backable', :remote =>true, :title =>item.get_full_name
  - else
    = link_to get_band_logo_small(item), show_band_path(:band_name => item.name), :class =>'ajaxopen backable', :remote =>true, :title =>item.name