- @artists  = Artist.random_artists 2, current
- @randomA  = @artists.first
- @randomB  = @artists.size > 1 ? @artists.last : nil
- if @randomA
  .left
    .photo
      = get_artist_profile_image(@randomA)
    .overlay
      = link_to show_artist_path(@randomA.name), {:class =>'ajaxopen backable', :remote =>true} do
        artist
        %h2= @randomA.name
- if @randomB
  .right
    .photo
      = get_artist_profile_image(@randomB)
    .overlay
      = link_to show_artist_path(@randomB.name), {:class =>'ajaxopen backable', :remote =>true} do
        artist
        %h2= @randomB.name