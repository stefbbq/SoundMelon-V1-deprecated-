- selected    ||=false
- link_class  = selected ? 'selection-box iconactive ajaxload button-fill-artist backable' : 'selection-box iconactive ajaxload backable'
- if @has_admin_access || song_album_count > 0
  = link_to band_song_albums_path(:band_name =>band.name), {:remote=>:true, :id=>'music', :class=>link_class} do
    music
    - if @has_admin_access
      %span.add_more= link_to image_tag('add.png'), new_band_song_album_path(:band_name => band.name), :remote=>:true, :class=>"ajaxopen"
    - unless song_album_count < Constant::BAND_SONG_ALBUM_SHOW_LIMIT
      %br/
      = link_to "see all", band_song_albums_path(:band_name => band.name), :remote=>:true, :class=>"small-font ajaxopen backable"      
- else
  .selection-box-nohref
    music
.collection{:id =>'musicbox'}
  - if song_album_count > 0
    %div
      - song_albums.each do |song_album|
        .song-album{:id => "song_album_#{song_album.id}"}
          - if @has_admin_access
            = link_to image_tag('add.png'), add_songs_to_album_path(band.name, song_album.album_name ), :remote => true, :class => 'ajaxopen backable'
          %span.album-cover-image
            = link_to get_album_cover_image(song_album), band_song_album_path(band.name, song_album.album_name), :remote=>:true, :class=>"ajaxopen backable"
          = link_to song_album.album_name, band_song_album_path(band.name,song_album.album_name), :remote=>:true, :class=>"ajaxopen backable"
          - if @has_admin_access
            = link_to image_tag('remove.png'), delete_song_album_path(band.name, song_album.id), :remote=>:true, :confirm => 'Are you sure?', :class=>"ajaxopen"
  - else
    .message= Constant::NO_SONG_ALBUM_MESSAGE