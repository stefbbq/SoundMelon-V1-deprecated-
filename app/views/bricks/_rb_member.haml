- is_admin ||=false
- selected ||=false
- link_class = selected ? 'active selection-box iconactive ajaxload button-fill-artist backable' : 'selection-box iconactive ajaxload backable'
%div{:style=>"position: relative;"}
  - if band.is_member_public? || is_admin
    - if artist_count > 0
      = link_to band_members_path(:band_name => band.name), {:remote=>:true, :id=> "members", :class => link_class} do
        members
    - else
      .selection-box-nohref
        members
  .collection
    %div
      - if artist_count >0
        - band_artists.each do |artist|
          = render '/bricks/avatar', :item =>artist
      - else
        .message= NO_BAND_ARTIST_MESSAGE