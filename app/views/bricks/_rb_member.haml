- band_member_count = band_artists.size
= link_to band_members_path(:band_name => band.name), {:remote=>:true, :id=>"members", :class=>"ajaxopen backable selection-box"} do
  members
  %span{ :class => 'artist-count'}
    = pluralize(band_member_count, 'artist')
  - unless band_member_count < Constant::BAND_MEMBER_SHOW_LIMIT
    %br
    =  link_to "see all", band_members_path(:band_name => band.name), :remoe=>:true, :class=>"small-font ajaxopen backable"
.collection
  %div
    - if band_member_count >0
      - band_artists.each do |band_artist|
        .avatar
          =link_to get_avatar_small(band_artist), fan_profile_path(band_artist), :class =>'ajaxopen backable', :remote =>true
    - else
      .message= Constant::NO_BAND_ARTIST_MESSAGE