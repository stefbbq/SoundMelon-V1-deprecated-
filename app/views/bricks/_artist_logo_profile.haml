- if band.band_logo
  = image_tag(band.band_logo.logo.url(:large) + "&t=#{Time.now.strftime('%H%m%s')}")
  .overlay
    = link_to crop_logo_path, {:remote=>:true,:class=>'ajaxopen'} do
      %h2
        change crop
    = link_to new_logo_path, {:remote=>:true,:class=>'ajaxopen'} do
      %h2
        modify
    = link_to delete_logo_path, {:remote=>:true} do
      %h2
        remove
- else
  = image_tag('artist-defaults-photo-thumbnail.jpg')
  .overlay
    = link_to new_logo_path, {:remote=>:true} do
      %h2
        add