- if profileitem.class.name == 'Colony'
  - new_path    = new_avatar_path(profileitem.id)
  - delete_path = delete_avatar_path(profileitem.id)
- else
  - new_path    = new_avatar_path
  - delete_path = delete_avatar_path

- if profileitem.profile_pic(true)
  = image_tag(profileitem.profile_pic.avatar.url(:medium) + "&t=#{Time.now.strftime('%H%m%s')}")
  .overlay
    = link_to new_path, {:remote=>:true,:class=>'ajaxopen', :title =>"upload new profile image"} do
      %h2
        upload
    = link_to delete_path, {:remote=>:true, :title =>"remove profile image"} do
      %h2
        remove
- else
  = image_tag('profile/artist-defaults-photo-profile-add.jpg')
  .overlay
    = link_to new_path, {:remote=>:true, :title =>"upload new profile image"} do
      %h2
        add