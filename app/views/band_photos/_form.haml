%p{:id=>'notice'}
  = notice
  - unless @band_album.errors.blank?
    %ul
      - @band_album.errors.full_messages.each do |error_msg|
        %li= error_msg
#band_tours
  %h3
  = "Update Band Album"
  %hr/
  = form_for @band_album, :url => {:controller => 'band_photos', :action => 'update'}, :html => {:remote =>true } do |f|
    = hidden_field_tag :band_name, @band.name
    = hidden_field_tag :band_album_name, @band_album.name
    .field
      = f.label :name
      = f.text_field :name
    %p= f.submit "Update"