= render :partial=>"/artist_public/live"
.primary-container
  .primary
    .left
      - if @has_admin_access
        .content-action-space
          = link_to "add album", new_band_album_path(:band_name => @band.name), :remote=>:true, :class=>"ajaxopen add-new"
      #photo_album_box
        - @band_albums.each do |band_album|
          = render '/band_photos/band_photo_album', :band_album =>band_album, :show_all =>@show_all || false
    .right
      = render '/artist_public/right', :current => 'photo'