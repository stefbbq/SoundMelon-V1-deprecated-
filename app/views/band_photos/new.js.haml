- upload_form = capture do
  .header
    create an album
  .normal-content.mini-content
    = render :partial => "uploader" 
    = form_for @band_photo, :url => {:controller => 'band_photos', :action => 'create'}, :html => {:multipart => true} do |f|
      = hidden_field_tag :band_name, @band.name 
      .field
        = f.label "name"
        - if @band_album
          = text_field_tag :album_name, @band_album.name, :class => 'overlay-text-field', :disabled => true
        - else
          = text_field_tag :album_name, nil, :class => 'overlay-text-field'
      .field 
        = f.label "upload"
        = f.file_field :image
        - f.submit "Upload"
    #uploaded
    / temporary accept button, needs proper cancel/accept, with no accept option on no data input
    %a.generic-button{:href => "javascript:$(document).trigger('close.facebox')"}
      accept
  #notice.error
    = notice
!= "jQuery.facebox('#{escape_javascript upload_form}');"
!= "$('.ajaxopen').bind('ajax:before', function() {jQuery.facebox($('#globalloading').html());$(':submit').attr('disabled','disabled');});"