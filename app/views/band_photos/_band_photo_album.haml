- show_all        ||=false
.artist-content[band_album]
  .top
    .cover
      = link_to get_band_photo_album_teaser_photo(band_album, :medium, '60px;', '60px;'), band_album_photos_path(:band_name =>@band.name, :band_album_name => band_album.name), :remote=>:true, :class=>"ajaxopen"
    .info
      = link_to band_album_photos_path(:band_name =>@band.name, :band_album_name => band_album.name),{ :remote=>:true, :class=>"ajaxopen"} do
        %h2=band_album.name
      %h4
        Released
        = band_album.created_at.strftime("%b %d, %Y")
    .artist-content-actions
      = link_to band_album_buzz_path(band_album.id, :album_name => band_album.name), {:remote => true, :class => 'ajaxopen'} do
        .buzz-icon
        buzz
  .bottom
    .stat{:id =>"photo_stat_#{band_album.id}"}
      = pluralize(band_album.photo_count, 'photo')
      - if @has_admin_access
        .controls
          = link_to "add", add_photos_to_album_path(:band_name => band_album.band.name, :band_album_name => band_album.name), {:remote=>:true, :class=>"ajaxopen", :title =>"add new photo"}            
          = link_to "edit", edit_album_path(:band_name =>@band.name, :band_album_name => band_album.name), :remote=>:true, :class=>"ajaxopen", :id =>"edit_link_#{band_album.id}"        
          = link_to band_album.disabled? ? 'enable' : 'disable', disable_enable_band_album_path(:band_name =>@band.name, :album_name => band_album.name), :remote=>:true, :class=>"ajaxopen", :id =>"public_view_link_#{band_album.id}"        
          = link_to "remove", delete_album_path(:band_name =>@band.name, :band_album_name => band_album.name), :remote=>:true, :class=>"ajaxopen"        
          =# link_to "like/dislike", like_band_album_path(:band_name =>@band.name, :album_name => band_album.name), :remote=>:true, :class=>"ajaxopen", :id =>"like_dislike_link_#{band_album.id}"
    .toggle
      .toggle-thread
        - unless show_all
          = link_to "expand", band_album_photos_path(:band_name =>@band.name, :band_album_name => band_album.name), :remote=>:true, :class=>"ajaxopen", :id =>"expand_link_#{band_album.id}"
        - else
          %a{:href => "javascript:void(0);", :onclick => "$('#band_album_#{band_album.id} .album-details').toggle();$(this).html($.trim($(this).text())=='collapse' ? 'expand' : 'collapse');"}collapse
    .album-details
      - if show_all
        .photo_gallery
          - band_album.band_photos.each do |photo|
            = render 'band_photo', :photo => photo, :band_album =>band_album
  .clear
.clear