.album_photo[photo]
  =link_to image_tag(photo.image.url(:medium), :width => '100px', :height =>'100px'), band_album_photo_path(photo.id, :band_album_name => @band_album.name, :band_name => @band.name), :remote => true, :class => 'ajaxopen', :title =>photo.caption
  %br
  - if @is_admin_of_band
    - if photo.caption.blank?
      = link_to 'Add Caption', edit_photo_path(photo.id, :band_name => @band.name, :album_name => @band_album.name), :remote => true, :class => 'ajaxopen'
    - else      
      = link_to 'Edit Caption',  edit_photo_path(photo.id, :band_name => @band.name, :album_name => @band_album.name), :remote => true, :class => 'ajaxopen'
    = link_to 'Delete', delete_photo_path(photo.id, :band_name => @band.name, :album_name => @band_album.name), :remote => true, :class => 'ajaxopen'