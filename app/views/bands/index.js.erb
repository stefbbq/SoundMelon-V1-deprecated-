$('.left').html('');
<% content = capture do %>
  <% if @bands.blank? %>
    You have no musician profiles. <%= link_to 'create one?', new_band_path, :class => 'ajaxopen', :remote => true %>
  <% else %>
    <div class='bands'>
      select a band from the list below to administer
      <br /><hr />
      <% @bands.each do |band| %>
        <div class='band'>
          <div class='band-logo-sml'>
             <%= get_band_logo_medium(band)  %>
          </div>
          <div class='band-info'>
            <span class="band-name"><%=band.name%></span><br />
            <span class="band-genre">(<%= band.genre%>)</span><br />
            <span class="other-info"> 
              Fan #<%=band.followers_count -%>, 
              Album #<%=band.song_albums_count -%>,  
              Songs #<%=band.songs_count -%>
            </span><br />
            <span class="band-access">
              <%=link_to 'access>>>', manage_band_path(:band_name => band.name),:class=>'button' %>
            </span>
          </div>
        </div>
        <hr />
      <% end %>
    </div>
  <% end %>
<% end %>

$('.left').html('<%= escape_javascript(content) %>');
setTimeout('$(document).trigger(\"close.facebox\")',10);
$('div').removeClass('active');
$('#musician-access .selection-box').addClass('active');
