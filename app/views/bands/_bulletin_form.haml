.statusinput
 = form_tag(user_posts_path, :class=>"ajaxload",:remote => true, :id => 'user_post_form') do
  - if @band
   = hidden_field_tag :band_id, @band.id
  = text_area :post, :msg, :class=>"inputbox" ,:maxlength => 200, :style => 'width:86%; height:46px;'
  .postbtn{:style => 'width:11%; height: auto;'}
   = submit_tag('Post',:class=>"postsubmit")
   = check_box :post, :is_bulletin
   bulletin
  .clear
  %span.inputerror