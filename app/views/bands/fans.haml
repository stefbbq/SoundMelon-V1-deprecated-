$('.midcontent > .left > .leftcontainer').html('');
- band_fans = capture do
  Fans
  %hr
  - @band_fans.each do |user| 
    .band-member
      .avatar
        = link_to get_avatar_medium(user), user_profile_path(user.id)
      .user-name 
        %strong
          = link_to user.get_full_name, user_profile_path(user.id)
      .clear
 
$('.midcontent > .left > .leftcontainer').html('#{escape_javascript(band_fans)}');
setTimeout('$(document).trigger(\"close.facebox\")',10);
$('div').removeClass('active');
$('#fanbox .band-box-header').addClass('active'); 