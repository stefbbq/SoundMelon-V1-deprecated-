.live
  .profile-image
    = get_avatar_large(@user)
  .links
    .top
      .header
        .name
          %h2
            = @user.get_full_name
        .actions
          %span{:id =>'follow_link'}
            - if current_user.following?(@user)
              = link_to 'unfollow', unfollow_user_path(@user, :others => 1), :remote => true, :class => 'ajaxopen'
            - else
              = link_to 'follow', follow_user_path(@user), :remote => true, :class => 'ajaxopen'
          //message  
          = link_to 'message', new_message_path(:id =>@user.id),:remote=>:true,:class=>"ajaxopen"
      .sub-head
        = @user.get_full_address
      .description
        = @user.bio
    .bottom
      .left.left-default
      .right.right-default