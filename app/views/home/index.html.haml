- content_for :tophead do
  .header
    .login
      %h3
        Already registered?
      = form_tag login_path do
        = text_field_tag :email, params[:email], :class => "field"
        = password_field_tag :password,nil, :class => "field"
        = submit_tag "", :class => 'exec-login'
      = link_to 'Forgot your password?', password_resets_path, :remote => true, :class => 'ajaxopen', :id => 'password-reset'
    .logo
      = image_tag 'base-logo-big.png'
      %h2
        Growing the music radio missed.
.register
  .user_nav
    - if current_user
      Logged in as #{"#{current_user.fname} #{current_user.lname}"}
      | #{link_to "Log out", logout_path}
  .musicianinfo
    %h3= link_to 'Register (as an artist)', musician_registration_path
  .faninfo
    %h3= link_to 'Register (as a fan)', fan_registration_path
  .clear
