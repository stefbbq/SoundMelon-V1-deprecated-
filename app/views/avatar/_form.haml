- if @profile_pic.errors.any? 
  #error_explanation
    %h2
      = pluralize(@profile_pic.errors.count, "error")
      prohibited this image from being saved:
    %ul
      - @profile_pic.errors.full_messages.each do |msg|
        %li
          = msg
.loader
= form_for @profile_pic, :url => url, :html => {:multipart => true, :remote => true } do |f|
  Upload Pic
  %br
  = f.file_field :avatar    
  = f.submit "Upload",:class=>"button blue"
