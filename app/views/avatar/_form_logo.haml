- if @item_logo.errors.any?
  #error_explanation
    %h2
      = pluralize(@item_logo.errors.count, "error")
      prohibited this image from being saved:
    %ul
      - @artist_logo.errors.full_messages.each do |msg|
        %li
          = msg
.loader
= form_for @item_logo, :url => add_logo_path, :html => {:multipart => true, :remote => true } do |f|
  Upload Pic
  %br
  = f.file_field :logo
  - if @item_logo.respond_to? 'artist_id'
    = f.hidden_field :artist_id
  - elsif @item_logo.respond_to? 'venue_id'
    = f.hidden_field :venue_id
  = f.submit "Upload",:class=>"button blue"
