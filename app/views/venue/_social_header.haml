- tabs        = [:mention, :reply, :message]
- current     = current.blank? ? 0 : (tabs.index(current.to_sym) || 0)
- venue      = venue || @venue
- if venue
  .social-header
    = link_to mentioned_path,
        {:class=> 0 == current ? "backable iconactive ajaxopen highlight active button-fill-artist" : "backable iconactive ajaxopen",
         :id => 'mentions' } do
      - if @unread_mentioned_count > 0
        your posts & 
        %b
          = pluralize(@unread_mentioned_count,'new mention')
      - else
        your posts & mentions
    = link_to replies_path,
        {:class=> 1 == current ? "backable iconactive ajaxopen highlight active button-fill-artist" : "backable iconactive ajaxopen",
         :id => 'replies' } do
      - if @unread_post_replies_count > 0        
        %b
          = pluralize(@unread_post_replies_count, 'new reply')
      - else
        replies
    = link_to user_inbox_path,
        {:class=> 2 == current ? "backable inbox iconactive ajaxopen highlight active button-fill-artist" : "backable inbox iconactive ajaxopen",
         :id => 'messages' } do
      - if @unread_messages_count > 0        
        %b
          = pluralize(@unread_messages_count, 'new message')
      - else
        messages