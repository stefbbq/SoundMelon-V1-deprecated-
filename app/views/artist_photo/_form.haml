%p{:id=>'notice'}
  = notice
  - unless @artist_album.errors.blank?
    %ul
      - @artist_album.errors.full_messages.each do |error_msg|
        %li= error_msg
#artist_tours
  %h3
  = "Update artist Album"
  %hr/
  = form_for @artist_album, :url => {:controller => 'artist_photo', :action => 'update'}, :html => {:remote =>true } do |f|
    = hidden_field_tag :artist_name, @artist.mention_name
    = hidden_field_tag :album_name, @artist_album.name
    .field
      = f.label :name
      = f.text_field :name
    %p= f.submit "Update"