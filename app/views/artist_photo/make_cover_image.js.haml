- all_photos = capture do
  - @artist_album.artist_photos.each do |photo|
    = render 'photo', :photo => photo, :artist_album =>@artist_album
- left_list_cover_image = capture do
  = link_to image_tag(@artist_photo.image.url(:medium), :height => '80px', :width=>'80px'), artist_album_photos_path(@artist, @artist_album.name), :remote=>:true, :class=>"ajaxopen"
- album_new_cover_image = capture do
  = link_to get_artist_photo_album_teaser_photo(@artist_album), artist_album_path(@artist, @artist_album.name), :remote=>:true, :class=>"ajaxopen backable"
if($('.left #photo_album_box #artist_album_#{@artist_album.id}').length>0){$('.left #photo_album_box #artist_album_#{@artist_album.id} .album_teaser_image').html('#{escape_javascript left_list_cover_image}');}
if($('.right #photobox #artist_album_#{@artist_album.id}').length>0){$('.right #photobox #artist_album_#{@artist_album.id} .cover').html('#{escape_javascript album_new_cover_image}');}
$('#artist_album_#{@artist_album.id} .gallery').html('#{escape_javascript all_photos}');
closeFacebox(1);