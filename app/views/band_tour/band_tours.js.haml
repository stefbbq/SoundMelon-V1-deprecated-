- band_tours = capture do
  .content-action-space
    share an upcoming gig
    = link_to "add show", new_band_tour_path(:band_name => @band.name), :remote=>:true, :class=>"ajaxopen add-new", :title => "add new show"
  .album-list
    - if @band_shows.blank?
      Artist has not set any shows!
    - else
      - @band_shows.each do |band_tour|
        = render '/band_tour/show', :band_tour =>band_tour, :show_all =>@show_all || false

$('.primary .left').html('#{escape_javascript band_tours} ');
setTimeout('$(document).trigger(\"close.facebox\")',10);
$('.selection-box').removeClass('active').removeClass('button-fill-artist')
$('#shows').addClass('active').addClass('button-fill-artist');
scrollToTop();