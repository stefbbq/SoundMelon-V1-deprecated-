- new_tour_list_html = capture do
  .band_tour{:id =>'band_tour_#{@band_tour.id}'}
    = link_to @band_tour.tour_date.strftime('%b %d') + " @#{@band_tour.venue}", band_tour_path(:band_name =>@band.name, :band_tour_id => @band_tour.id), :remote=>:true, :class=>"ajaxopen"  
$('#facebox #notice').html("<span style='color:red;font-size:15px;'>Added New Show</span>");
!= "$('#new_band_tour')[0].reset();"
$('#tourbox .collection').prepend('#{escape_javascript(new_tour_list_html)}');
