= render :partial=>"/artist_public/live"
.primary-container
  .primary
    .left
      - if @has_admin_access
        .content-action-space
          share an upcoming gig
          = link_to "add show", new_band_tour_path(:band_name => @band.name), :remote=>:true, :class=>"ajaxopen add-new", :title => "add new show"
      .album-list
        - if @band_shows.blank?
          Artist has not set any shows!
        - else
          - @band_shows.each do |band_tour|
            = render '/band_tour/show', :band_tour => band_tour
    .right
      = render "/artist_public/right", :current =>'tour'