.area.form
  .details
    %h3
      your name is
      %span= @user.get_full_name
    %h5 click the lock to enable changes
  .content
    = form_for :user, :url => update_basic_info_path, :html => {:remote => true, :class => 'ajaxopen'}  do |f|
      .field
        %label{:for=>"name"}
          first
        = f.text_field :fname
      .field
        %label{:for=>"name"}
          last
        = f.text_field :lname
      = submit_tag 'update it, it\'s legal', :class => 'button'