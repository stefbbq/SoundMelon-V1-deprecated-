$('.primary .left').html('');
- manage_profile_forms = capture do
  .content-box#basic-info
    %h3 Basic info
    %hr/
    #basic-info-msg
    = render :partial => '/fan/basic_info_form'
  .content-box#additional-info
    %h3 Additional Info
    %hr/
    #additional-info-msg
    = render :partial => '/fan/edit_additional_info_form'
  .content-box#change-password
    %h3 Change Password
    %hr/
    #change-password-msg
    = render :partial => '/fan/change_password_form'    
$('.primary .left').html('#{escape_javascript(manage_profile_forms)}');
setTimeout('$(document).trigger(\"close.facebox\")',10);
$('.selection-box').removeClass('active').removeClass('button-fill-fan');
$('#manage-profile').addClass('active').addClass('button-fill-fan');