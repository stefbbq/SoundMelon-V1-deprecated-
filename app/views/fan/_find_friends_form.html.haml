#homefeed.homefeed.center
  .feedbox
    %h3
      %a{:href => "#hotmail", :rel => "topup"} Msn
    #hotmail.hide
      .fetchbox
        %h1
          %span.shaded MSN
        = form_tag fetch_contacts_url,:id=>"msn1", :class=>"ajaxopen", :remote => true do
          = hidden_field_tag :emailtype, "Hotmail"
          .fields
            %label Email
            = text_field_tag :email, nil, :class => 'textfield'
            .clear
          .fields
            %label Password
            = password_field_tag :password, nil, :class => 'passwordfield textfield'
            .clear
          %br/
          .error-msg-2
          %br/
          = submit_tag 'Connect',:id=>"msn",:class => 'contact_fetch button right'
