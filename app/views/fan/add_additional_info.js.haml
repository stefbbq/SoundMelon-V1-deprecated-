$(".error_messages").remove('');
- if @user.errors.any?
  - er_msg = "<div class='error_messages'><ul>"
  - for message in @user.errors.full_messages
    - er_msg += "<li>" + message + "</li>"
  - er_msg += "</ul></div>"
  $("#additional-info-msg").html('');
  $("#additional_info").prepend("#{raw er_msg}");
- else
  $(".error_messages").remove('');
  - if @success
    $("#additional-info-msg.msg").html("info successfully updated");
  - else
    $("#additional_info").prepend("<div id='additional-info-msg'>info successfully added</div>");
