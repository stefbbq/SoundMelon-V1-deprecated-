- tabs      = [:latest_post, :mention, :reply, :message]
- current   = current.blank? ? 0 : (tabs.index(current.to_sym) || 0)
.social-header
  = link_to "latest", fan_home_path, 
    :remote   => true,
    :class    => "backable iconactive highlight ajaxload active button-fill-fan",
    :id       => 'latest',
    :class    => 0 == current ? "backable iconactive highlight ajaxopen active button-fill-fan" : "backable iconactive highlight ajaxopen"
  = link_to mentioned_path,
      {:remote => true, 
       :class=> 1 == current ? "backable iconactive ajaxopen highlight active button-fill-fan" : "backable iconactive ajaxopen",
       :id => 'mentions' } do
    - if @unread_mentioned_count > 0      
      %b
        = pluralize(@unread_mentioned_count,'new mention')
    - else
      mentions
  = link_to replies_path,
      {:remote => true, 
       :class=> 2 == current ? "backable iconactive ajaxopen highlight active button-fill-fan" : "backable iconactive ajaxopen",
       :id => 'replies' } do
    - if @unread_post_replies_count > 0      
      %b
        = pluralize(@unread_post_replies_count, 'new reply')
    - else
      replies
  = link_to user_inbox_path,
      {:remote => true, 
       :class=> 3 == current ? "backable inbox iconactive ajaxopen highlight active button-fill-fan" : "backable inbox iconactive ajaxopen",
       :id => 'messages' } do
    - if @unread_messages_count > 0      
      %b
        = pluralize(@unread_messages_count, 'new message')
    - else
      messages