- create_form = capture do
  .header
    create an album
  .normal-content.mini-content
    = render :partial => "uploader"
    = form_for @song, :url => {:controller => 'artist_music', :action => 'create'}, :html => {:multipart => true} do |f|
      = hidden_field_tag :artist_name, @artist.name
      .field
        = f.label "name"
        - if @artist_music
          = text_field_tag :album_name, @artist_music.album_name, :class => 'overlay-text-field', :disabled => true
        - else
          = text_field_tag :album_name, nil, :class => 'overlay-text-field'
      .field
        = f.label "upload"
        = f.file_field :song
        - f.submit "Upload"
      #uploaded
    / temporary accept button, needs proper cancel/accept, with no accept option on no data input
    %a.generic-button{:href => "javascript:$(document).trigger('close.facebox')" }
      accept
  #notice.error
    = notice
faceboxContent('#{escape_javascript create_form}')