- show_artist_music_songs = capture do
  - @artist_music.songs.each do |song|
    = render 'song_item', :song => song
- hide_artist_music_songs = capture do
  %a{:href => "javascript:void(0);", :class => "toggle-thread toggle-thread-collapse", :onclick => "onToggle($(this));$('#artist_music_#{@artist_music.id} .album-details').toggle();"}
    %i
    collapse album
$('#artist_music_#{@artist_music.id} .album-details').html('#{escape_javascript show_artist_music_songs}');
$('#expand_link_#{@artist_music.id}').replaceWith('#{escape_javascript hide_artist_music_songs}');
closeFacebox(1);