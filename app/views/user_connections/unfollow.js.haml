- avatar_div    = @actor.is_fan? ? "fan_follower_fan_#{@actor.id}" : "fan_follower_artist_#{@actor.id}"
- item_div_id   = "#{@actor.class.name.downcase}_#{@actor.id}_following_#{@user_to_be_unfollowed.class.name.downcase}_#{@user_to_be_unfollowed.id}"
- follow_content = capture do
  = link_to 'follow', follow_user_path(@user_to_be_unfollowed), :remote => true, :class => 'ajaxopen', :id=>'follow_link'
$('.actions #follow_link').replaceWith('#{escape_javascript follow_content}');
if($("#fanfollowers ##{avatar_div}").length>0){$("#fanfollowers ##{avatar_div}").remove();}
if($('.primary .left .fan_follower_list ##{item_div_id}').length>0){$('.primary .left .fan_follower_list ##{item_div_id}').remove();}
$('#followers span.count').html("#{@last_follower_count}");
$('#facebox .content').html('Unfollowed Successfully');
setTimeout('$(document).trigger(\"close.facebox\")',1000); 