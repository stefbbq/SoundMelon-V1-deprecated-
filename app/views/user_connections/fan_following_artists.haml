= render :partial=>"/fan_public/live"
.primary-container
  .primary
    .left
      .connections_list{:id =>"#{@user.class.name.downcase}_#{@user.id}_following_artists"}
        - @fan_following_artists.each do |artist|
          = render '/user_connections/item', :user =>artist, :connection_item =>@user, :is_user_fan =>false
        = paginate @fan_following_artists, :remote => true
    .right
      = render "/fan/right", :current =>'following_artist'