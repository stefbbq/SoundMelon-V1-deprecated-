= render :partial=>"/fan_public/live"
.primary-container
  .primary
    .left
      %b Artists Following by '#{@user.fname}'
      %hr
      .connections_list
        - @following_artists.each do |band|
          = render '/user_connections/item', :user =>band, :connection_item =>@user, :following =>false
        =# paginate @following_artists, :remote => true
    .right
      = render "/fan_public/right", :current =>'following_artist'