$('.primary .left').html('');
- followers = capture do
  %b Followers of #{@user.fname}
  %hr
  .connections_list
    - @followers.each do |user|
      = render '/user_connections/item', :user =>user, :connection_item =>@user, :following =>true
    =# paginate @followers, :remote => true
$('.primary .left').html('#{escape_javascript(followers)}');
setTimeout('$(document).trigger(\"close.facebox\")',10);
$('.right .selection-box').removeClass('active').removeClass('button-fill-fan');
$('#followers').addClass('active').addClass('button-fill-fan');