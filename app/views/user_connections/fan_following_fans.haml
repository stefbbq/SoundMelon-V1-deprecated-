= render :partial=>"/fan_public/live"
.primary-container
  .primary
    .left
      %b Fans Following by '#{@user.fname}'
      %hr
      .fan_following_fan_list
        - @following_fans.each do |user|
          = render '/user_connections/item', :user =>user, :connection_item =>@user, :following =>false
        = paginate @following_fans, :remote => true
    .right
      = render "/fan_public/right", :current =>'following_fan'