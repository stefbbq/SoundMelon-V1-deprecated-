$('.midcontent > .left > .leftcontainer').html('');
<% followers = capture do %>
  <hr />
  Follower List
  <hr />
  <% @followers.each do |user| %> 
    <div id='follower_<%=user.id%>'>
      <%=  link_to get_avatar_small(user), user_profile_path(user.id) %> 
      <%=  link_to user.get_full_name, user_profile_path(user.id) %>
    </div> 
  <%end%>
  <%= paginate @followers, :remote => true %>
<% end %>

$('.midcontent > .left > .leftcontainer').html('<%= escape_javascript(followers) %>');
setTimeout('$(document).trigger(\"close.facebox\")',10);
