- content_for :tophead do
  .profilehead
    %h2.logotext
      %a{:href => "/"} SoundMelon
    .mplayerbar
      .logo
        %p S
      .playerbox
      .headrightbox
        = link_to "Logout" ,logout_path, :class=>"logout"
        .icons
          %span.name
            = link_to "#{current_user.fname} #{current_user.lname}" ,user_home_path
          .numbericon
            %a{:href => "#"} 3
          .numbericon
            %a{:href => "#"} 8
          .othericon1
            %a{:href => "#"} 19
          .othericon1
            %a{:href => "#"} &euro;
          .othericon
            %a{:href => "#"} +
          .clear
      .clear
    .headmenubar
      .menu
        %ul
          %li
            = #link_to 'News', show_band_path(:band_name => @band.name), :remote => true, :class => 'ajaxload iconactive'
          %li
            = link_to 'Social', band_social_path(:band_name => @band.name), :remote => true, :class => 'ajaxload iconactive'
          %li
            = link_to 'Store', band_store_path(:band_name => @band.name), :remote => true, :class => 'ajaxload iconactive'
          - if @is_admin_of_band
            %li 
              = link_to 'Administer', manage_band_path(:band_name => @band.name)
        .clear
      .searchbox
        =form_tag( {:controller =>'search', :action => 'index'}, :method => "get") do
          %input.auto_search_complete{:name => "q", :type => "text", :class => 'searchinput'}/
          %input.search{:name => "search", :type => "submit", :value => "Go" }/
      .clear