- actor       = current_actor
- is_own_wall = actor.instance_of?(Band) && (actor.id == @band.id)
.live
  .profile-image{:title =>"#{@band.name}"}
    = get_band_logo_large(@band)
  .links
    .top
      .header
        .name
          %h2
            = @band.name
        .actions
          - unless is_own_wall
            - if @is_admin_of_band
              = link_to "administer", change_login_path(@band.name), :class =>'ajaxopen text-action', :remote =>true
            - if actor.is_fan?
              - if actor.following?(@band)
                = link_to 'unfollow', unfollow_band_path(:band_name => @band.name), :id =>'followartist', :remote => true, :class => 'ajaxopen text-action'
              - else
                = link_to 'follow', follow_band_path(:band_name => @band.name), :id =>'followartist', :remote => true, :class => 'ajaxopen text-action'
            - else
              #connect_section
                = render 'bricks/artist_connection' , :actor =>actor, :band => @band
          = link_to '', @band.facebook_page, :target =>'_blank', :title =>"Visit our Facebook page", :class =>"icon-action facebook-icon" unless @band.facebook_page.blank?
          = link_to '', @band.twitter_page, :target =>'_blank', :title =>"Visit our Twitter", :class =>"icon-action twitter-icon" unless @band.twitter_page.blank?
      .sub-head
        %h3 
          = "#{@band.genre}"
      .description
    .bottom
      .left.left-default
      .right.right-default