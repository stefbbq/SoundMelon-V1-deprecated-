=div_for user_post do
 .msgbox
  .newsitem
   .itemcontent
    = user_post.user.fname 
    wrote this about an #{time_ago_in_words(user_post.created_at)} ago 
    %br
    = user_post.post
   .righticons
    = link_to 'X', user_post_path(user_post), :method => :delete,:title=>"Remove", :class => "delete_post", :remote => true if user_post.user_id == current_user.id
    %br
    share 
    %br
    reply
   .clear
 .clear
