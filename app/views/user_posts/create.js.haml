- date  = @post.created_at.strftime("%Y%m%d")
- month = @post.created_at.strftime("%b")
- day   = @post.created_at.strftime(" %d")
!= "$('#user_post_form')[0].reset();"
- if @post.is_bulletin
  != "$('.band-bulletins').prepend('#{escape_javascript(render 'user_posts/post', :post => @post)}');"
- else
  != "if($('.user_posts #date_#{date}').length==0){$('.user_posts').prepend('<div class=\"date\" id=\"date_#{date}\"><div><h1>#{month}</h1><h2>#{day}</h2></div> </div>');}"
  != "$('#{escape_javascript(render 'user_posts/post', :post => @post)}').insertAfter($('.user_posts #date_#{date}'));"
!= "$('.postsubmit').attr('disabled','disabled');"
