- if @artist
  = render :partial=>"/artist/live"
  .primary-container
    .primary
      .left
        .top
          = render '/user_posts/status_artist'
          = render '/artist/social_header', :current =>'mention'
        = render "/bricks/artist_posts", :current =>'mention'
      .right
        = render "/artist/right"
- elsif @venue
  = render :partial=>"/venue/live"
  .primary-container
    .primary
      .left
        .top
          = render '/user_posts/status_venue'
          = render '/venue/social_header', :current =>'mention'
        = render "/bricks/venue_posts", :current =>'mention'
      .right
        = render "/venue/right"